{
  "name": "fluxionwatt.github.io",
  "version": "1.0.0",
  "description": "A modern Hugo theme for SaaS websites",
  "author": "Chaoming Li",
  "license": "MIT",
  "scripts": {
    "start": "concurrently \"npx tailwindcss -i themes/fc-theme/assets/css/main.css -o static/css/style.css --watch\" \"hugo server -D\"",
    "build": "tailwindcss -i themes/fc-theme/assets/css/main.css -o static/css/style.css --minify && HUGO_ENV=production hugo --minify",
    "deploy": "npx gh-pages -d ./public/ -b gh-pages"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "tailwindcss": "^3.3.5"
  },
  "dependencies": {
    "gh-pages": "^6.3.0"
  }
}
